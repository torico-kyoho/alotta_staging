extends ../_inc/_layout_inner.pug

append vars
	include ../_inc/_config.pug
	- var key = 'staff04';
	- var page = pages[key];

append js
	script(type='text/javascript' src=page.path+"assets/js/inner.js")

append css
	link(rel="stylesheet", href=page.path+"assets/css/inner.css")



append innerVisual

	#innerVisual
		.headTextArea
			h1.title STAFF
			p.sub スタッフ



block contents
	section#staff_single
		.inner

			.colLayout
				.img
					img(src=page.path+"assets/images/staff/staff04.jpg" alt="")
					.btn: a.btnStyle01(href="https://www.instagram.com/_nagaikatsunori_/" target="_blank") #[span.inst]Instagramをチェック
					.btn: a.btnStyle01(href="https://twitter.com/nagaikatsunori_" target="_blank") #[span.twt]Twitterをチェック


				.textBox
					.nameArea
						h2.position スタイリスト
						p.name 永井

					.infoArea
						dl
							dt スタイリスト歴
							dd 4年
						dl
							dt 得意な技術
							dd 縮毛矯正、髪質改善
						dl
							dt 得意なスタイル
							dd ナチュラルで女性らしさを感じるスタイル、#[br.pc]メンズスタイル
						dl
							dt 取得資格・受賞歴
							dd 毛髪構造アドバイザー

						dl
							dt 趣味
							dd 美容研究、ネットサーフィン、写真、音楽
						dl
							dt 休日の過ごし方
							dd 映画鑑賞、食べ歩き、ショッピング、#[br.pc]ひたすら寝る
						dl
							dt メッセージ
							dd くせ毛、ダメージ毛でお困りの方、美髪・艶髪になりたい！くせ毛をどうにかしたい！複雑なお悩みを持つ方、本気できれいにしたい方はぜひお任せください！髪質改善や縮毛矯正を年間500件以上施術させていただいております。#[br]縮毛矯正は一人ひとりの髪質にあった薬剤を使用し、髪質に応じてぴったりな施術方法をとります。#[br]毛髪理論や化学に精通しているので、お客様に「ピッタリな処方」を提供できます。二人三脚で頑張っていくのが大切ですので、ご指名お待ちしております。


			.btnArea
				.btn: a.btnStyle02.gray.back(href="./") スタッフ一覧ページへ戻る
				.btn: a.btnStyle02(href="https://beauty.hotpepper.jp/CSP/bt/reserve/?storeId=H000346915&stylistId=T000414696" target="_blank") 指名して予約する
