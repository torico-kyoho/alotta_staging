extends ../_inc/_layout_inner.pug

append vars
	include ../_inc/_config.pug
	- var key = 'staff03';
	- var page = pages[key];

append js
	script(type='text/javascript' src=page.path+"assets/js/inner.js")

append css
	link(rel="stylesheet", href=page.path+"assets/css/inner.css")



append innerVisual

	#innerVisual
		.headTextArea
			h1.title STAFF
			p.sub スタッフ



block contents
	section#staff_single
		.inner

			.colLayout
				.img
					img(src=page.path+"assets/images/staff/staff03.jpg" alt="")
					.btn: a.btnStyle01(href="https://www.instagram.com/yoricococco/" target="_blank") #[span.inst]Instagramをチェック


				.textBox
					.nameArea
						h2.position スタイリスト
						p.name 石橋

					.infoArea
						dl
							dt スタイリスト歴
							dd 8年
						dl
							dt 得意な技術
							dd ニューヨークドライカット、カラー、#[br.pc]メイク、アレンジ
						dl
							dt 得意なスタイル
							dd ショート、メンズスタイル
						dl
							dt 取得資格・受賞歴
							dd
								ul
									li ・JNAネイル検定3級
									li ・パーソナルカラー検定3級

						dl
							dt 趣味
							dd 音楽、映画、おいしいごはんやさんに行く
						dl
							dt 休日の過ごし方
							dd のんびりする
						dl
							dt メッセージ
							dd alottaは全室個室なので、おひとりでもご友人、ご家族でもゆっくりとリラックスして施術を受けることができます。いろいろなお話をしながら楽ちんな髪型、似合う髪型を一緒に見つけましょう!!



			.btnArea
				.btn: a.btnStyle02.gray.back(href="./") スタッフ一覧ページへ戻る
				.btn: a.btnStyle02(href="https://beauty.hotpepper.jp/CSP/bt/reserve/?storeId=H000346915&stylistId=T000435439" target="_blank") 指名して予約する
