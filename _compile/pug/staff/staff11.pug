extends ../_inc/_layout_inner.pug

append vars
	include ../_inc/_config.pug
	- var key = 'staff11';
	- var page = pages[key];

append js
	script(type='text/javascript' src=page.path+"assets/js/inner.js")

append css
	link(rel="stylesheet", href=page.path+"assets/css/inner.css")



append innerVisual

	#innerVisual
		.headTextArea
			h1.title STAFF
			p.sub スタッフ



block contents
	section#staff_single
		.inner

			.colLayout
				.img
					img(src=page.path+"assets/images/staff/staff11.jpg" alt="")


				.textBox
					.nameArea
						h2.position レセプション
						p.name 安田

					.infoArea
						dl
							dt 取得資格・受賞歴
							dd クラシックラッシュコースディプロマ
						dl
							dt 趣味
							dd 楽しいこと、笑うことが好き
						dl
							dt 休日の過ごし方
							dd 家事したり、歯医者に行ったり
						dl
							dt メッセージ
							dd ショップにはたくさんの商品があり、皆様のお悩みに合った商品をご購入していただけます。分からないことがあればスタッフになんでも聞いてください！#[br]サロンでは個室のプライベートな空間でリラックスしていただけると思います。#[br]私たちレセプションがご案内させて頂きます。#[br]ぜひ一度ご来店お待ちしております。


			.btnArea
				.btn: a.btnStyle02.gray.back(href="./") スタッフ一覧ページへ戻る
