extends ../_inc/_layout_inner.pug

append vars
	include ../_inc/_config.pug
	- var key = 'staff12';
	- var page = pages[key];

append js
	script(type='text/javascript' src=page.path+"assets/js/inner.js")

append css
	link(rel="stylesheet", href=page.path+"assets/css/inner.css")



append innerVisual

	#innerVisual
		.headTextArea
			h1.title STAFF
			p.sub スタッフ



block contents
	section#staff_single
		.inner

			.colLayout
				.img
					img(src=page.path+"assets/images/staff/staff12.jpg" alt="")


				.textBox
					.nameArea
						h2.position レセプション
						p.name 仲地

					.infoArea
						dl
							dt 趣味
							dd テレビ見ること、抹茶を食べること、#[br.pc]カフェに行くこと
						dl
							dt 休日の過ごし方
							dd テレビを見たり、電車で遠出したり、#[br.pc]カフェでのんびり
						dl
							dt メッセージ
							dd 色々な美容室があると思いますが、個室空間での美容室はあまりないと思うので、お客様それぞれがリラックスして頂いたり、スタッフとの会話を楽しんで頂ける空間になっていると思います。#[br]ショップも併設しているので、沢山の商品の中から自分にあった商品を選んで頂けるのも魅力ですので、ぜひ一度いらしてみて下さい。


			.btnArea
				.btn: a.btnStyle02.gray.back(href="./") スタッフ一覧ページへ戻る
